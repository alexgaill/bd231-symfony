{% extends "base.html.twig" %}

{% block body %}
<div class="col-6 mx-auto">
    <h1 class="text-center mt-3">{{post.title}}</h1>
    {% if post.picture %}
        <img src="{{ asset('assets/img/posts/upload/' ~ post.picture) }}" alt="{{ post.title }}">
    {% endif %}
    <p>{{post.content}}</p>
    <small class="text-secondary">
         Article rédigé {# par <a href="{{ path('show_user', {id: post.user.id}) }}" class="text-dark">{{ post.user.prenom }} {{ post.user.nom }}</a> #}
        le {{post.createdAt|format_date('long', locale='fr')}} appartenant à la catégorie 
        <span >
            <a href="{{ path('show_category', {id: post.category.id}) }}" class="text-success">
                {{ post.category.name }}
            </a>
        </span>
    </small>
</div>

{% endblock %}